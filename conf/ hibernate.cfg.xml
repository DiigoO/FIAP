<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate
Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernateconfiguration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.password">fiap</property>
		<property name="hibernate.connection.url">
			jdbc:mysql://localhost:3306/forum
		</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.current_session_context_class">thread</property>
		<property name="hbm2ddl.auto">update</property>
		<!-- Mapeamento de Classes -->
		<mapping class="br.com.fiap.Aula7_1.entity.Forum" />
		<mapping class="br.com.fiap.Aula7_1.entity.Usuario" />
	</session-factory>
</hibernate-configuration>